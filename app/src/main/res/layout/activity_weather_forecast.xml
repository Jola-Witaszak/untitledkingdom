<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.WeatherForecastActivity" android:background="@color/purple_700">

    <Button
            android:text="@string/min_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/min_button"
            android:onClick="onClick"
            app:backgroundTint="@color/purple_200"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="50dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/max_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/max_button"
            android:onClick="onClick"
            app:backgroundTint="@color/purple_500"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/min_button"/>
    <Button
            android:text="@string/avg_daily_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/average_daily_button"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" android:layout_marginStart="20dp"
            app:backgroundTint="@color/purple_500" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/max_button"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"/>
    <Button
            android:text="@string/all_cities_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/all_cities_button"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" android:layout_marginStart="20dp"
            app:backgroundTint="@color/purple_500" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/average_daily_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>